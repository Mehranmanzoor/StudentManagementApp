@page
@model StudentManagementApp.Pages.AttendanceReports.IndexModel
@{
    ViewData["Title"] = "Attendance Report";
}

<div class="container text-light">
    <h2 class="mb-4">ðŸ“… Attendance Records</h2>

    <table class="table table-dark table-bordered table-hover">
        <thead>
            <tr><th>Date</th><th>Student</th><th>Status</th></tr>
        </thead>
        <tbody>
        @foreach (var record in Model.Records)
        {
            <tr>
                <td>@record.Date.ToShortDateString()</td>
                <td>@record.Student.Name</td>
                <td>
                    <span class="badge bg-@(record.Status == "Present" ? "success" : "danger")">
                        @record.Status
                    </span>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
