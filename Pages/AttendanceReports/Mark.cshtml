@page
@model StudentManagementApp.Pages.AttendanceReports.MarkModel
@{
    ViewData["Title"] = "Mark Attendance";
}

<div class="container text-light">
    <h2 class="mb-4">📝 Mark Attendance</h2>
    <form method="post">
        <table class="table table-dark table-striped">
            <thead>
                <tr><th>Student</th><th>Present</th></tr>
            </thead>
            <tbody>
            @for (int i = 0; i < Model.Students.Count; i++)
            {
                <tr>
                    <td>@Model.Students[i].Name</td>
                    <td>
                        <input type="checkbox" asp-for="AttendanceStatus[i]" />
                        <input type="hidden" name="StudentIds" value="@Model.Students[i].Id" />
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <button type="submit" class="btn btn-success">Submit</button>
    </form>
</div>
