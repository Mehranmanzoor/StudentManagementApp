@page "{id:int}"
@model StudentManagementApp.Pages.Students.DeleteModel
@{
    ViewData["Title"] = "Delete Student";
}

<div class="container text-light">
    <h2 class="mb-4">🗑️ Delete Student</h2>

    <div class="alert alert-danger">
        Are you sure you want to delete this student?
    </div>

    <dl class="row">
        <dt class="col-sm-3">Name:</dt>
        <dd class="col-sm-9">@Model.Student.Name</dd>

        <dt class="col-sm-3">Age:</dt>
        <dd class="col-sm-9">@Model.Student.Age</dd>

        <dt class="col-sm-3">Grade:</dt>
        <dd class="col-sm-9">@Model.Student.Grade</dd>

        <dt class="col-sm-3">Email:</dt>
        <dd class="col-sm-9">@Model.Student.Email</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Student.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
